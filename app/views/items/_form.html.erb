<%= form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
	<div class="control-group">
	  <%= f.label :area_id, :class => 'control-label' %>
	  <div class="controls">
	  </div>
	</div>
  <div class="control-group">
    <%= f.label :area, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :area, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ranking, :class => 'control-label' %>
    <div class="controls">
			<%= f.select :ranking, (0..1).step(0.1)%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :factor, :class => 'control-label' %>
    <div class="controls">
			<%= f.select :factor, (0..100).step(5)%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                items_path, :class => 'btn' %>
  </div>
<% end %>
